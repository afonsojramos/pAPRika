{
	"name": "paprika",
	"displayName": "pAPRika",
	"description": "Property-Based Automatic Program Repair made easy",
	"author": "afonsojramos",
	"license": "MIT",
	"version": "0.1.3",
	"repository": {
		"type": "git",
		"url": "https://github.com/afonsojramos/pAPRika"
	},
	"publisher": "afonsojramos",
	"icon": "pAPRika/assets/pAPRika.png",
	"categories": [
		"Other"
	],
	"keywords": [
		"multi-root ready"
	],
	"engines": {
		"vscode": "^1.43.0"
	},
	"activationEvents": [
		"onLanguage:javascript",
		"onLanguage:typescript"
	],
	"main": "./client/out/extension",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "pAPRika",
			"properties": {
				"pAPRika.runOnOpen": {
					"scope": "resource",
					"type": "boolean",
					"default": true,
					"description": "Run pAPRika when opening files."
				},
				"pAPRika.runOnSave": {
					"scope": "resource",
					"type": "boolean",
					"default": true,
					"description": "Run pAPRika when saving files."
				},
				"pAPRika.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "off",
					"description": "Traces the communication between VS Code and the language server."
				}
			}
		},
		"commands": [
			{
				"command": "pAPRika.runAPRSuite",
				"title": "Run pAPRika"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
		"test": "sh ./scripts/e2e.sh",
		"package": "tsc -b && vsce package",
		"publish": "vsce publish"
	},
	"dependencies": {
		"fast-check": "^1.24.2",
		"mocha": "^7.2.0",
		"typescript": "^3.9.3"
	},
	"devDependencies": {
		"@types/mocha": "^5.2.7",
		"@types/node": "^12.12.43",
		"@typescript-eslint/parser": "^2.34.0",
		"eslint": "^6.4.0",
		"prettier": "^2.0.5",
		"ts-node": "^8.10.2",
		"typescript": "^3.9.3"
	}
}
