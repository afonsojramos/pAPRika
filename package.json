{
	"name": "paprika",
	"displayName": "pAPRika",
	"description": "Property-Based Automatic Program Repair made easy",
	"author": "afonsojramos",
	"license": "MIT",
	"version": "0.3.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/afonsojramos/pAPRika"
	},
	"publisher": "afonsojramos",
	"icon": "pAPRika/assets/pAPRika.png",
	"categories": [
		"Other"
	],
	"keywords": [
		"multi-root ready"
	],
	"engines": {
		"vscode": "^1.43.0"
	},
	"activationEvents": [
		"onLanguage:javascript",
		"onLanguage:typescript"
	],
	"main": "./client/out/extension",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "pAPRika",
			"properties": {
				"pAPRika.runOnOpen": {
					"scope": "resource",
					"type": "boolean",
					"default": true,
					"description": "Run pAPRika when opening files."
				},
				"pAPRika.runOnSave": {
					"scope": "resource",
					"type": "boolean",
					"default": true,
					"description": "Run pAPRika when saving files."
				},
				"pAPRika.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "off",
					"description": "Traces the communication between VS Code and the language server."
				}
			}
		},
		"commands": [
			{
				"command": "pAPRika.runAPRSuite",
				"title": "pAPRika: Spice this file"
			},
			{
				"command": "pAPRika.runAPRSuiteAll",
				"title": "pAPRika: Spice all open files"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
		"package": "tsc -b && vsce package",
		"publish": "vsce publish",
		"test-server": "mocha --parallel -r ts-node/register server/src/test/*.spec.ts"
	},
	"dependencies": {
		"fast-check": "^2.14.0",
		"mocha": "^9.1.2",
		"typescript": "^4.2.3"
	},
	"devDependencies": {
		"@types/chai": "^4.2.16",
		"@types/mocha": "^8.2.2",
		"@types/node": "^14.14.37",
		"@typescript-eslint/parser": "^4.20.0",
		"chai": "^4.3.4",
		"eslint": "^7.23.0",
		"mocha": "^9.1.2",
		"prettier": "^2.2.1",
		"ts-node": "^9.1.1",
		"typescript": "^4.2.3"
	}
}